<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Warna dasar kotak -->
    <corners android:radius="8dp" /> <!-- Mengatur radius sudut kotak -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Warna garis tepi kotak -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" /> <!-- Padding untuk memberikan ruang bagi bayangan -->
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#77000000" /> <!-- Jarak bayangan dalam dari tepi kotak -->
</shape>